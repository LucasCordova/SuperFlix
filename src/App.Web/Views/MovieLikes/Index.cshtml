@model IEnumerable<App.Core.Entities.MovieLike>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br/><br/><br/>

<table class="table-light">
    <thead>
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.MovieId)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.AppUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var movieLike in Model) {
        <tr>
            <td style="color: white;">
                @Html.DisplayFor(modelItem => movieLike.MovieId)
            </td>
                <td style="color: white;">
                @Html.DisplayFor(modelItem => movieLike.AppUserId)
            </td>
                <td style="color: white;">
                <a asp-action="RemoveLike", asp-route-id="@movieLike.Id">Remove Like</a>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
